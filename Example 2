class Employee:
  def __init__(self,first,last,pay):
    self.first = first
    self.last = last
    self.pay = pay
    self.email = first + "." + last + "@gmail.com"
emp_1 = Employee("Mohsin","Irfan","Rs.1000000")
emp_2 = Employee("Harris","Irfan","Rs.1200000")

print("{} {} {}".format(emp_1.first,emp_1.last,emp_1.pay))
print(emp_1.email)
print("{} {} {}".format(emp_2.first,emp_2.last,emp_2.pay))
print(emp_2.email)
